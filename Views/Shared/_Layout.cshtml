@using EaziLease.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EaziLease</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        :root {
            --sidebar-width: 260px;
            --primary-blue: #3b82f6;
            --super-amber: #f59e0b;
            --slate-800: #1e293b;
            --slate-900: #0f172a;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            overflow-x: hidden;
        }

        #wrapper { display: flex; width: 100%; align-items: stretch; }

        #sidebar {
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: var(--slate-800);
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh;
            z-index: 1000;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        #sidebar .sidebar-header { padding: 2rem 1.5rem; background: var(--slate-900); }
        
        .nav-link-custom {
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            color: #94a3b8;
            text-decoration: none;
            transition: all 0.2s;
            border-left: 4px solid transparent;
            font-size: 0.9rem;
        }

        .nav-link-custom i { width: 25px; font-size: 1.1rem; margin-right: 10px; opacity: 0.7; }
        
        .nav-link-custom:hover, .nav-link-custom.active {
            color: #fff;
            background: rgba(255,255,255,0.05);
            border-left-color: var(--primary-blue);
        }

        .nav-link-custom.super-active {
            border-left-color: var(--super-amber);
            color: var(--super-amber);
        }

        /* Top Navbar */
        .top-navbar {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #e2e8f0;
            padding: 0.75rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .super-status-badge {
            background: #fef3c7;
            color: #92400e;
            border: 1px solid #fcd34d;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            animation: pulse-gold 2s infinite;
        }

        @@keyframes pulse-gold {
            0% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.4); }
            70% { box-shadow: 0 0 0 6px rgba(245, 158, 11, 0); }
            100% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0); }
        }

        #content { width: 100%; display: flex; flex-direction: column; }
        footer { background: white; padding: 1.5rem 0; border-top: 1px solid #e2e8f0; }

        @@media (max-width: 992px) {
            #sidebar { margin-left: calc(-1 * var(--sidebar-width)); }
            #sidebar.active { margin-left: 0; }
        }
    </style>
</head>
<body>

<div id="wrapper">
    <nav id="sidebar">
        <div class="sidebar-header">
            <h4 class="mb-0 fw-bold text-white">
                <i class="fas fa-bolt text-primary me-2"></i>EaziLease
            </h4>
        </div>

        <div class="py-4">
            <small class="text-uppercase px-4 mb-2 d-block opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Main Menu</small>
            <a asp-controller="Dashboard" asp-action="Index" class="nav-link-custom">
                <i class="fas fa-chart-pie"></i> Insights
            </a>

            @if(User.Identity?.IsAuthenticated == true && User.IsInRole("Admin")){
                <small class="text-uppercase px-4 mt-4 mb-2 d-block opacity-50 fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Management</small>
                <a asp-controller="Vehicles" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-car-side"></i> Fleet Inventory
                </a>
                <a asp-controller="Suppliers" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-truck-loading"></i> Suppliers
                </a>
                <a asp-controller="Branches" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-code-branch"></i> Branches
                </a>
                <a asp-controller="Clients" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-building"></i> Clients
                </a>
                <a asp-controller="Drivers" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-user-tie"></i> Drivers
                </a>

               
            }
            @if (User.IsInRole("SuperAdminCandidate"))
            {
                 @* Always visible to SuperAdminCandidate roles. *@
                <a asp-area="" asp-controller="Elevation" asp-action="Elevate" 
                   class="nav-link-custom @(Context.IsSuperAdminElevated() ? "super-active" : "")">
                    <i class="fas fa-shield-alt"></i> Elevate Mode
                </a>
            }

            @if (User.Identity.IsAuthenticated && Context.IsSuperAdminElevated())
            {
                <small class="text-uppercase px-4 mt-4 mb-2 d-block text-warning fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">System Admin</small>
                <a asp-controller="Audit" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-history"></i> Audit Logs
                </a>
                <a asp-area="SuperAdmin" asp-controller="SuperDashboard" asp-action="Index" class="nav-link-custom">
                    <i class="fas fa-user-shield"></i> Admin Portal
                </a>
                <a asp-area="" asp-controller="Elevation" asp-action="Exit" class="nav-link-custom text-danger">
                    <i class="fas fa-power-off"></i> Exit Super Mode
                </a>
            }
        </div>
    </nav>

    <div id="content">
        <nav class="navbar navbar-expand-lg top-navbar">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-light border me-3">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="d-flex align-items-center ms-auto">
                    @if (User.Identity.IsAuthenticated && Context.IsSuperAdminElevated())
                    {
                        <div class="super-status-badge me-3 d-none d-md-flex align-items-center">
                            <i class="fas fa-lock-open me-2"></i> Super Admin Active
                        </div>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <main role="main" class="px-md-4 py-4 flex-grow-1">
            @RenderBody()
        </main>

        <footer class="mt-auto">
            <div class="container-fluid text-center">
                <span class="text-muted small">&copy; @DateTime.Now.Year EaziLease Fleet Solutions. Built for Efficiency.</span>
            </div>
        </footer>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });

        // Smart active link detection
        var currentPath = window.location.pathname;
        $('.nav-link-custom').each(function() {
            var href = $(this).attr('href');
            if(href !== "/" && currentPath.startsWith(href)) {
                $(this).addClass('active');
            } else if (currentPath === "/" && href === "/Dashboard") {
                $(this).addClass('active');
            }
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>