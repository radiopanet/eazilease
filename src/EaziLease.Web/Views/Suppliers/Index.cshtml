@model IEnumerable<EaziLease.Domain.Entities.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<style>
    /* ... existing styles from previous response ... */
    
    .fleet-badge {
        background: #f1f5f9;
        color: #475569;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: 1px solid #e2e8f0;
    }
    
    .fleet-badge i {
        color: #3b82f6;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">Suppliers & Partners</h1>
            <p class="text-muted mb-0">Total of @Model.Count() procurement partners registered.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4 py-2 shadow-sm rounded-3">
            <i class="fas fa-plus-circle me-2"></i> Add New Supplier
        </a>
    </div>

    <div class="supplier-card">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Supplier Name</th>
                            <th>Primary Contact</th>
                            <th>Communication</th>
                            <th>Fleet Volume</th> <th>Location</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3">
                                            @obj.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="fw-bold text-dark">@obj.Name</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-medium text-dark">@obj.ContactPerson</div>
                                </td>
                                <td>
                                    <a href="mailto:@obj.ContactEmail" class="contact-link small mb-1">
                                        <i class="far fa-envelope text-muted"></i> @obj.ContactEmail
                                    </a>
                                    <a href="tel:@obj.ContactPhone" class="contact-link small">
                                        <i class="fas fa-phone-alt text-muted"></i> @obj.ContactPhone
                                    </a>
                                </td>
                                <td>
                                    <div class="fleet-badge shadow-sm">
                                        <i class="fas fa-car-side"></i>
                                        <span>@(obj.Vehicles?.Count() ?? 0) <small class="fw-normal opacity-75">Units</small></span>
                                    </div>
                                </td>
                                <td>
                                    <div class="small fw-medium">@obj.City</div>
                                    <div class="small text-muted">@obj.Country</div>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group shadow-sm rounded">
                                        <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-white btn-sm border" title="View Details">
                                            <i class="fas fa-eye text-info"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-white btn-sm border" title="Edit Supplier">
                                            <i class="fas fa-edit text-warning"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-white btn-sm border" title="Delete Supplier" 
                                           onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-truck-loading fa-3x text-light mb-3"></i>
                <h5 class="text-muted">No partners yet.</h5>
            </div>
        }
    </div>
</div>