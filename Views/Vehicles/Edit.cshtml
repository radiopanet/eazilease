@model EaziLease.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle: " + Model.RegistrationNumber;
}

<h1 class="h3 mb-4">Edit Vehicle</h1>
<hr />

<div class="row">
    <div class="col-md-8 mx-auto">
        <form asp-action="Edit" class="card p-4 shadow-sm">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-2 fs-6 text-primary">Vehicle Identification</legend>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RegistrationNumber" class="form-label"></label>
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="VIN" class="form-label"></label>
                        <input asp-for="VIN" class="form-control" />
                        <span asp-validation-for="VIN" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Manufacturer" class="form-label"></label>
                        <input asp-for="Manufacturer" class="form-control" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-2 fs-6 text-primary">Specifications</legend>
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="FuelType" class="form-label"></label>
                        <select asp-for="FuelType" class="form-select" asp-items="Html.GetEnumSelectList<EaziLease.Models.FuelType>()"></select>
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Transmission" class="form-label"></label>
                        <select asp-for="Transmission" class="form-select" asp-items="Html.GetEnumSelectList<EaziLease.Models.TransmissionType>()"></select>
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<EaziLease.Models.VehicleStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-2 fs-6 text-primary">Financial & Location</legend>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DailyRate" class="form-label"></label>
                        <input asp-for="DailyRate" class="form-control" disabled/>
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="SupplierId" class="form-label"></label>
                        <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId"></select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="BranchId" class="form-label"></label>
                        <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId"></select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            
            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-2 fs-6 text-primary">History</legend>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PurchasePrice" class="form-label"></label>
                        <input asp-for="PurchasePrice" class="form-control" />
                        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="PurchaseDate" class="form-label"></label>
                        <input asp-for="PurchaseDate" type="date" class="form-control" />
                        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="LastServiceDate" class="form-label"></label>
                        <input asp-for="LastServiceDate" type="date" class="form-control" />
                        <span asp-validation-for="LastServiceDate" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <div class="d-flex justify-content-between pt-2">
                <button type="submit" class="btn btn-primary" style="width:150px;">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}