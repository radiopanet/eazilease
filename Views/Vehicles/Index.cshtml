@using EaziLease.Extensions
@model IEnumerable<EaziLease.Models.Vehicle>

@{
    ViewData["Title"] = "Fleet Inventory";
}

<style>
    .table-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        padding: 1.5rem;
    }

    .vehicle-table thead th {
        background-color: #f8fafc;
        color: #64748b;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        border-top: none;
        padding: 1rem;
    }

    .vehicle-table tbody tr {
        transition: all 0.2s;
        border-bottom: 1px solid #f1f5f9;
    }

    .vehicle-table tbody tr:hover {
        background-color: #f8fbff;
        transform: scale(1.002);
    }

    .reg-plate {
        font-family: 'Monaco', 'Consolas', monospace;
        background: #f1f5f9;
        padding: 2px 8px;
        border-radius: 4px;
        color: #1e293b;
        font-weight: 600;
        border: 1px solid #e2e8f0;
    }

    .status-dot {
        height: 8px;
        width: 8px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }

    .badge-soft {
        padding: 0.5em 0.8em;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">Fleet Management</h1>
            <p class="text-muted mb-0">Manage and monitor @Model.Count() vehicles in your inventory.</p>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                <input type="text" id="fleetSearch" class="form-control border-start-0" placeholder="Search registration, model...">
            </div>
            <a asp-action="Create" class="btn btn-primary px-4 shadow-sm">
                <i class="fas fa-plus me-2"></i>Add Vehicle
            </a>
        </div>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-container">
        <div class="table-responsive">
            <table class="table vehicle-table align-middle" id="vehicleIndexTable">
                <thead>
                    <tr>
                        <th>Registration</th>
                        <th>Vehicle Details</th>
                        <th>Location & Source</th>
                        <th>Status</th>
                        <th>Assignment</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="reg-plate">@item.RegistrationNumber</span>
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.Manufacturer @item.Model</div>
                                <div class="small text-muted">Year: @item.Year</div>
                            </td>
                            <td>
                                <div class="small"><i class="fas fa-map-marker-alt me-1 text-primary"></i> @(item.Branch?.Name ?? "Unassigned")</div>
                                <div class="small text-muted"><i class="fas fa-building me-1"></i> @(item.Supplier?.Name ?? "N/A")</div>
                            </td>
                            <td>
                                @{
                                    var (colorClass, bgClass) = item.Status switch {
                                        EaziLease.Models.VehicleStatus.Available => ("#10b981", "bg-success-subtle text-success"),
                                        EaziLease.Models.VehicleStatus.Leased => ("#3b82f6", "bg-primary-subtle text-primary"),
                                        EaziLease.Models.VehicleStatus.InMaintenance => ("#f59e0b", "bg-warning-subtle text-dark"),
                                        _ => ("#ef4444", "bg-danger-subtle text-danger")
                                    };
                                }
                                <span class="badge-soft @bgClass">
                                    <span class="status-dot" style="background-color: @colorClass"></span>
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                @if (item.CurrentLease != null)
                                {
                                    <div class="small fw-bold">@item.CurrentLease.Client?.CompanyName</div>
                                    <div class="small text-muted">Driver: @(item.CurrentDriver?.FullName ?? "N/A")</div>
                                }
                                else
                                {
                                    <span class="text-muted small"><em>No active lease</em></span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white btn-sm border" title="View Details">
                                        <i class="fas fa-eye text-info"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-sm border" title="Edit">
                                        <i class="fas fa-edit text-warning"></i>
                                    </a>
                                    @if (User.Identity.IsAuthenticated && Context.IsSuperAdminElevated())
                                    {
                                        <button type="button" class="btn btn-white btn-sm border text-danger" 
                                                onclick="confirmDelete('@item.Id')" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <form id="delete-form-@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:none;"></form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('fleetSearch').addEventListener('keyup', function() {
            let filter = this.value.toUpperCase();
            let rows = document.querySelector("#vehicleIndexTable tbody").rows;
            
            for (let i = 0; i < rows.length; i++) {
                let text = rows[i].textContent.toUpperCase();
                rows[i].style.display = text.includes(filter) ? "" : "none";
            }
        });

        function confirmDelete(id) {
            if (confirm('Are you sure you want to move this vehicle to the trash?')) {
                document.getElementById('delete-form-' + id).submit();
            }
        }
    </script>
}