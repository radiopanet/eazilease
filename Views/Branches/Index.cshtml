@model IEnumerable<EaziLease.Models.Branch>

@{
    ViewData["Title"] = "Operations Network";
}

<style>
    .branch-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
    }
    .branch-table thead th {
        background: #f8fafc;
        text-transform: uppercase;
        font-size: 0.7rem;
        font-weight: 700;
        color: #64748b;
        letter-spacing: 0.05em;
        border: none;
        padding: 1rem 1.5rem;
    }
    .branch-table tbody td {
        padding: 1.2rem 1.5rem;
        vertical-align: middle;
        border-color: #f1f5f9;
    }
    .branch-icon {
        width: 45px;
        height: 45px;
        background: #f0fdf4;
        color: #16a34a;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.2rem;
    }
    .code-pill {
        background: #f1f5f9;
        color: #475569;
        font-family: 'Monaco', 'Consolas', monospace;
        font-size: 0.8rem;
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        font-weight: 600;
    }
    .management-btn {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
    }
</style>

<div class="container-fluid py-4 px-lg-5">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item small"><a href="#" class="text-decoration-none text-muted">Operations</a></li>
                    <li class="breadcrumb-item small active">Network</li>
                </ol>
            </nav>
            <h1 class="h3 fw-bold text-dark mb-0">Operational Branches</h1>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4 py-2 fw-bold shadow-sm rounded-3">
            <i class="fas fa-map-marked-alt me-2"></i>Expand Network
        </a>
    </div>

    <div class="card branch-card overflow-hidden">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table branch-table mb-0">
                    <thead>
                        <tr>
                            <th>Branch Hub</th>
                            <th>Identifier</th>
                            <th>Physical Address</th>
                            <th>Region / City</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="branch-icon me-3">
                                            <i class="fas fa-warehouse"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@obj.Name</div>
                                            <small class="text-muted">EaziLease Facility</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="code-pill">@obj.Code</span>
                                </td>
                                <td>
                                    <div class="small text-dark fw-medium" style="max-width: 250px;">
                                        <i class="fas fa-map-pin text-muted me-2"></i>@obj.Address
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border px-2 py-1 fw-semibold">
                                        <i class="fas fa-city me-1 opacity-50"></i> @obj.City
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@obj.Id" 
                                           class="management-btn bg-primary-subtle text-primary" 
                                           title="Edit Branch">
                                            <i class="fas fa-edit small"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@obj.Id" 
                                           class="management-btn bg-danger-subtle text-danger" 
                                           title="Remove Branch">
                                            <i class="fas fa-trash-alt small"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                    <i class="fas fa-map-signs fa-3x text-muted"></i>
                </div>
                <h5 class="fw-bold">No Hubs Registered</h5>
                <p class="text-muted small">Your operational network is currently empty. Start by adding your primary branch.</p>
                <a asp-action="Create" class="btn btn-primary btn-sm mt-2 px-4">Add Primary Hub</a>
            </div>
        }
    </div>
</div>