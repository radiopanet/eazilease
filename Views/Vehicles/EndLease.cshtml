@model EaziLease.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Return: " + Model.RegistrationNumber;
}

<style>
    .return-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
    }
    .lease-info-panel {
        background: #fdf2f2; /* Subtle red hue for "Ending" process */
        border-right: 1px solid #fee2e2;
        border-radius: 20px 0 0 20px;
    }
    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        display: block;
    }
    .inspection-group {
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-xl-10 mx-auto">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Process Vehicle Return</h1>
            </div>

            <div class="card return-card overflow-hidden">
                <div class="row g-0">
                    <div class="col-lg-4 lease-info-panel p-4 p-md-5">
                        <span class="form-section-title">Current Assignment</span>
                        
                        <div class="mb-4">
                            <h5 class="fw-bold text-danger mb-1">@Model.CurrentLease?.Client?.CompanyName</h5>
                            <span class="badge bg-danger-subtle text-danger rounded-pill">Active Lease Ending</span>
                        </div>

                        <div class="small text-muted mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Start Date:</span>
                                <span class="fw-bold text-dark">@Model.CurrentLease?.LeaseStartDate.ToShortDateString()</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Contract End:</span>
                                <span class="fw-bold text-dark">@Model.CurrentLease?.LeaseEndDate.ToShortDateString()</span>
                            </div>
                        </div>

                        <hr class="opacity-10">

                        <span class="form-section-title mt-4">Asset Details</span>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-car text-muted me-3 fs-4"></i>
                            <div>
                                <div class="fw-bold">@Model.Manufacturer @Model.Model</div>
                                <div class="small text-muted">Reg: @Model.RegistrationNumber</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-tachometer-alt text-muted me-3 fs-4"></i>
                            <div>
                                <div class="small text-muted">Last Recorded Mileage</div>
                                <div class="fw-bold">@Model.OdometerReading.ToString() KM</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8 p-4 p-md-5">
                        <form asp-action="EndLease" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <span class="form-section-title">Return Inspection Report</span>

                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold small">RETURN DATE</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="far fa-calendar-check"></i></span>
                                        <input type="date" name="returnDate" class="form-control border-start-0" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold small">FINAL ODOMETER (KM)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-tachometer-alt"></i></span>
                                        <input type="number" name="finalOdometer" class="form-control border-start-0" min="@Model.OdometerReading" placeholder="Current: @Model.OdometerReading" required />
                                    </div>
                                    <div class="form-text small">Must be higher than last recorded mileage.</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small">CONDITION NOTES & DAMAGES</label>
                                <textarea name="returnNotes" class="form-control" rows="4" placeholder="Describe fuel levels, scratches, or required cleaning..."></textarea>
                            </div>

                            <div class="inspection-group mb-5">
                                <label class="form-label fw-bold small text-danger">PENALTY & ADDITIONAL FEES</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 text-muted">R</span>
                                    <input type="number" name="penaltyFee" class="form-control border-start-0" step="0.01" min="0" placeholder="0.00" />
                                </div>
                                <div class="form-text small mt-2">Apply fees for late return, damages, or missing fuel.</div>
                            </div>

                            <div class="d-flex gap-3">
                                <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm rounded-3">
                                    <i class="fas fa-check-circle me-2"></i>Finalize Return
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light btn-lg px-4 text-muted">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>