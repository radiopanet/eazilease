@using EaziLease.Web.ViewModels
@model RateOverrideRequestViewModel

@{
    ViewData["Title"] = "Request Rate Override";
}

<style>
    .request-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
    }
    .rate-compare-container {
        display: flex;
        gap: 20px;
        margin-bottom: 2rem;
    }
    .rate-pill {
        flex: 1;
        padding: 1.5rem;
        border-radius: 16px;
        text-align: center;
        border: 2px solid #f1f5f9;
    }
    .rate-pill.current { background: #f8fafc; }
    .rate-pill.requested { 
        background: #fff7ed; 
        border-color: #fb923c; 
    }
    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        display: block;
    }
    .date-box {
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h2 class="h3 fw-bold text-dark mt-2">Pricing Adjustment Request</h2>
                <p class="text-muted">Vehicle: <span class="fw-bold">@Model.VehicleRegistration</span></p>
            </div>

            <form asp-action="RequestRateOverride" method="post" class="card request-card overflow-hidden">
                <input type="hidden" asp-for="VehicleId" />

                <div class="card-body p-4 p-md-5">
                    <span class="form-section-title">Rate Comparison</span>
                    
                    <div class="rate-compare-container">
                        <div class="rate-pill current">
                            <small class="text-muted text-uppercase fw-bold">Current Rate</small>
                            <div class="h3 fw-bold text-dark mb-0">@Model.CurrentDailyRate.ToString("C")</div>
                            <small class="text-muted">System Standard</small>
                        </div>
                        <div class="rate-pill requested">
                            <small class="text-warning text-uppercase fw-bold">Requested Rate</small>
                            <div class="input-group justify-content-center">
                                <span class="h3 fw-bold text-warning mb-0">R</span>
                                <input asp-for="RequestedDailyRate" class="h3 fw-bold text-warning border-0 bg-transparent w-50 p-0 mb-0 shadow-none text-center" placeholder="0.00" />
                            </div>
                            <small class="text-warning opacity-75">Pending Approval</small>
                        </div>
                    </div>

                    <div class="mb-5">
                        <span class="form-section-title">Justification</span>
                        <label asp-for="Reason" class="form-label fw-bold small">Reason for Override (Required for Audit)</label>
                        <textarea asp-for="Reason" class="form-control border-2 rounded-3" rows="3" placeholder="Explain why this rate adjustment is necessary..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <span class="form-section-title">Timeline & Scope</span>
                        <div class="form-check form-switch mb-4 p-0 ps-5">
                            <input asp-for="IsPermanent" class="form-check-input ms-n5" type="checkbox" id="isPermanentCheck">
                            <label class="form-check-label fw-bold" for="isPermanentCheck">
                                Apply this override permanently
                            </label>
                            <div class="form-text">If checked, this rate remains until manually changed again.</div>
                        </div>

                        <div id="temporaryDates" class="date-box row g-3" style="display: @(Model.IsPermanent ? "none" : "flex");">
                            <div class="col-md-6">
                                <label asp-for="EffectiveFrom" class="form-label fw-bold small">EFFECTIVE FROM</label>
                                <input asp-for="EffectiveFrom" type="date" class="form-control border-0 shadow-sm" 
                                       min="@Model.MinimumEffectiveDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EffectiveTo" class="form-label fw-bold small">EFFECTIVE UNTIL</label>
                                <input asp-for="EffectiveTo" type="date" class="form-control border-0 shadow-sm" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                        <a asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-light px-4 fw-bold text-muted">Cancel</a>
                        <button type="submit" class="btn btn-warning px-5 fw-bold shadow-sm">
                            <i class="fas fa-paper-plane me-2"></i> Submit Request
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('isPermanentCheck').addEventListener('change', function() {
            const dateBox = document.getElementById('temporaryDates');
            if (this.checked) {
                dateBox.style.display = 'none';
            } else {
                dateBox.style.display = 'flex';
                dateBox.classList.add('animate__animated', 'animate__fadeIn');
            }
        });
    </script>
}