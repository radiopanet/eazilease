@{
    ViewData["Title"] = "System Core Terminal";
}

<style>
    .terminal-card {
        background: #1e293b;
        border: 1px solid #334155;
        border-radius: 16px;
        transition: all 0.3s ease;
    }
    .terminal-card:hover {
        border-color: #f59e0b;
        transform: translateY(-2px);
    }
    .stat-value {
        font-family: 'JetBrains Mono', monospace;
        color: #f59e0b;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .action-icon {
        width: 50px;
        height: 50px;
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    .log-entry {
        border-left: 2px solid #334155;
        padding-left: 1rem;
        margin-bottom: 1rem;
        font-size: 0.85rem;
    }
</style>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="bg-warning text-dark p-3 rounded-3 me-3">
                    <i class="fas fa-terminal fa-2x"></i>
                </div>
                <div>
                    <h2 class="fw-bold mb-0">System Core Terminal</h2>
                    <p class="text-muted mb-0">Root Access Node: @User.Identity?.Name</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-muted fw-bold d-block mb-1">SYSTEM UPTIME</small>
                <span class="stat-value">99.98%</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-muted fw-bold d-block mb-1">PENDING AUDITS</small>
                <span class="stat-value text-info">24</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-muted fw-bold d-block mb-1">ACTIVE SESSIONS</small>
                <span class="stat-value">12</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3 border-danger">
                <small class="text-muted fw-bold d-block mb-1">SECURITY FLAGS</small>
                <span class="stat-value text-danger">0</span>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <h5 class="text-uppercase fw-bold mb-4 small opacity-50">Control Modules</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <a asp-controller="Audit" asp-action="Index" asp-area="" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-history"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">System Audit Logs</h6>
                                <p class="text-muted small mb-0">Monitor all system-wide transactions.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a asp-area="SuperAdmin" asp-controller="UserManagement" asp-action="Index" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-user-shield"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">User Access Control</h6>
                                <p class="text-muted small mb-0">Manage permissions & role escalation.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a asp-area="SuperAdmin" asp-controller="RateOverride" asp-action="Index" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-sliders-h"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">Financial Overrides</h6>
                                <p class="text-muted small mb-0">Adjust rates and penalty parameters.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="#" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-cogs"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">Global Configuration</h6>
                                <p class="text-muted small mb-0">Modify core EaziLease parameters.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <h5 class="text-uppercase fw-bold mb-4 small opacity-50">Recent System Activity</h5>
            <div class="terminal-card p-4" style="max-height: 400px; overflow-y: auto;">
                <div class="log-entry">
                    <span class="text-warning fw-bold">ELEVATION</span><br/>
                    <small class="text-muted">User @User.Identity?.Name accessed SuperAdmin Area.</small>
                    <div class="text-end small opacity-50">Just now</div>
                </div>
                <div class="log-entry">
                    <span class="text-info">CONFIG_CHANGE</span><br/>
                    <small class="text-muted">Daily rate for Branch #01 updated.</small>
                    <div class="text-end small opacity-50">14 mins ago</div>
                </div>
                <div class="log-entry">
                    <span class="text-danger">USER_LOCKED</span><br/>
                    <small class="text-muted">Account 'jsmith_operator' suspended.</small>
                    <div class="text-end small opacity-50">2 hours ago</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 pt-4 border-top border-secondary text-center">
        <p class="text-muted small mb-4">You are currently operating within a secure shell. Ensure all changes are verified.</p>
        <a asp-area="" asp-controller="Elevation" asp-action="Exit" class="btn btn-outline-danger px-5 py-2 fw-bold">
            <i class="fas fa-power-off me-2"></i>DE-ESCALATE SESSION
        </a>
    </div>
</div>