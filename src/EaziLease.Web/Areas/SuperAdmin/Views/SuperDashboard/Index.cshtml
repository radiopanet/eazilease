@using EaziLease.Web.ViewModels
@{
    ViewData["Title"] = "System Core Terminal";
    var upcoming = ViewBag.UpcomingMaintenance as IEnumerable<UpcomingMaintenanceViewModel>;
}

<style>
    .terminal-card {
        background: #1e293b;
        border: 1px solid #334155;
        border-radius: 16px;
        transition: all 0.3s ease;
    }
    .terminal-card:hover {
        border-color: #f59e0b;
        transform: translateY(-2px);
    }
    .stat-value {
        font-family: 'JetBrains Mono', monospace;
        color: #f59e0b;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .action-icon {
        width: 50px;
        height: 50px;
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    .log-entry {
        border-left: 2px solid #334155;
        padding-left: 1rem;
        margin-bottom: 1rem;
        font-size: 0.85rem;
    }
    .blink-soft {
        animation: blinker 2s linear infinite;
    }
    @@keyframes blinker {
        50% { opacity: 0.3; }
    }
    .table-hover tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05) !important;
    }
</style>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="bg-warning text-dark p-3 rounded-3 me-3">
                    <i class="fas fa-terminal fa-2x"></i>
                </div>
                <div>
                    <h2 class="fw-bold mb-0 text-white">System Core Terminal</h2>
                    <p class="text-muted mb-0 font-monospace">Root Access Node: @User.Identity?.Name</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-white fw-bold d-block mb-1">SYSTEM UPTIME</small>
                <span class="stat-value">99.98%</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-white fw-bold d-block mb-1">PENDING AUDITS</small>
                <span class="stat-value text-info">24</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3">
                <small class="text-white fw-bold d-block mb-1">ACTIVE SESSIONS</small>
                <span class="stat-value">12</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="terminal-card p-3 border-danger">
                <small class="text-white fw-bold d-block mb-1">SECURITY FLAGS</small>
                <span class="stat-value text-danger">0</span>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-dark border-secondary shadow-lg" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header border-bottom border-secondary d-flex justify-content-between align-items-center py-3" 
                     style="background: linear-gradient(90deg, #0f172a 0%, #1e293b 100%);">
                    <h5 class="mb-0 text-info fw-bold font-monospace small">
                        <i class="fas fa-microchip me-2"></i>PREVENTATIVE MAINTENANCE FORECAST
                    </h5>
                    <span class="badge bg-info-subtle text-info border border-info px-3">FLEET SCAN: ACTIVE</span>
                </div>
                
                <div class="card-body bg-black p-0">
                    @if (upcoming != null && upcoming.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0 align-middle font-monospace" style="font-size: 0.85rem;">
                                <thead class="text-secondary text-uppercase small" style="background: rgba(255,255,255,0.03);">
                                    <tr>
                                        <th class="ps-4 border-0">Asset #</th>
                                        <th class="border-0">Forecast Date</th>
                                        <th class="border-0">Threshold (KM)</th>
                                        <th class="border-0">Time Drift</th>
                                        <th class="border-0">KM Drift</th>
                                        <th class="border-0">Class</th>
                                        <th class="text-end pe-4 border-0">Severity</th>
                                    </tr>
                                </thead>
                                <tbody class="border-top-0">
                                    @foreach (var item in upcoming)
                                    {
                                        var timeOverdue = item.DaysRemaining < 0;
                                        var kmOverdue = item.KmRemaining < 0;

                                        <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
                                            <td class="ps-4">
                                                <a asp-action="Details" asp-controller="Vehicles" asp-area="" asp-route-id="@item.VehicleId" 
                                                   class="text-info text-decoration-none fw-bold">
                                                    @item.RegistrationNumber
                                                </a>
                                            </td>
                                            <td class="text-white opacity-75">
                                                @(item.NextMaintenanceDate?.ToString("yyyy-MM-dd") ?? "NODATA")
                                            </td>
                                            <td class="text-white opacity-75">
                                                @(item.NextMaintenanceMileage?.ToString("N0") ?? "---") <span class="small text-secondary">km</span>
                                            </td>
                                            <td class="@(timeOverdue ? "text-danger" : item.DaysRemaining <= 7 ? "text-warning" : "text-success")">
                                                <i class="fas fa-clock me-1 small"></i>
                                                @(timeOverdue ? "CRITICAL" : $"{item.DaysRemaining}d")
                                            </td>
                                            <td class="@(kmOverdue ? "text-danger" : item.KmRemaining <= 1000 ? "text-warning" : "text-success")">
                                                <i class="fas fa-tachometer-alt me-1 small"></i>
                                                @(kmOverdue ? "LIMIT_EXCEEDED" : $"{item.KmRemaining:N0}km")
                                            </td>
                                            <td class="text-info opacity-50 small">@item.Type</td>
                                            <td class="text-end pe-4">
                                                @if (timeOverdue || kmOverdue)
                                                {
                                                    <span class="text-danger fw-bold blink-soft">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>HALT
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success fw-bold">NOMINAL</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="text-secondary small font-monospace">NO UPCOMING MAINTENANCE DETECTED</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <h5 class="text-uppercase fw-bold mb-4 small opacity-50 text-white">Control Modules</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <a asp-controller="Audit" asp-action="Index" asp-area="" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-history"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">System Audit Logs</h6>
                                <p class="text-success small mb-0">Monitor all system-wide transactions.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a asp-area="SuperAdmin" asp-controller="UserManagement" asp-action="Index" class="text-decoration-none">
                        <div class="terminal-card p-4 d-flex align-items-center">
                            <div class="action-icon me-3"><i class="fas fa-user-shield"></i></div>
                            <div>
                                <h6 class="text-white fw-bold mb-1">User Access Control</h6>
                                <p class="text-success small mb-0">Manage permissions & role escalation.</p>
                            </div>
                        </div>
                    </a>
                </div>
                </div>
        </div>

        <div class="col-lg-4">
            <h5 class="text-uppercase fw-bold mb-4 small opacity-50 text-white">Recent System Activity</h5>
            <div class="terminal-card p-4" style="max-height: 400px; overflow-y: auto; background: #0f172a;">
                <div class="log-entry">
                    <span class="text-warning fw-bold font-monospace">ELEVATION</span><br/>
                    <small class="text-success">User @User.Identity?.Name accessed SuperAdmin Area.</small>
                    <div class="text-end small opacity-50 text-white">Just now</div>
                </div>
                </div>
        </div>
    </div>

    <div class="mt-5 pt-4 border-top border-secondary text-center">
        <p class="text-muted small mb-4">You are currently operating within a secure shell. Ensure all changes are verified.</p>
        <a asp-area="" asp-controller="Elevation" asp-action="Exit" class="btn btn-outline-danger px-5 py-2 fw-bold">
            <i class="fas fa-power-off me-2"></i>DE-ESCALATE SESSION
        </a>
    </div>
</div>