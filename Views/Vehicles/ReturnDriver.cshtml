@model EaziLease.Models.Vehicle

<h4>Return Driver Assignment</h4>
<p class="text-muted mb-4">
    Current driver: <strong>@Model.CurrentDriver?.FullName</strong>
</p>


@* @if (ViewBag.DebugAssignments != null)
{
    <div class="alert alert-info">
        @ViewBag.DebugAssignments
    </div>
} *@

<form asp-action="ReturnDriver" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-4">
        <label class="form-label">Return Date (optional)</label>
        <input type="date" name="returnDate" class="form-control" />
        <small class="text-muted">Leave empty to use today's date</small>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-warning">Confirm Return Driver</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>