@model EaziLease.Models.Vehicle

@{
    ViewData["Title"] = ViewBag.Title ?? "Create Vehicle";
}

<h2 class="h4">@ViewData["Title"]</h2>

<form asp-action="@(Model.Id == null ? "Create" : "Edit")" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.Id != null)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="col-md-6">
        <label asp-for="VIN" class="form-label"></label>
        <input asp-for="VIN" class="form-control" />
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="RegistrationNumber" class="form-label"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Manufacturer" class="form-label"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="FuelType" class="form-label"></label>
        <select asp-for="FuelType" class="form-select" asp-items="Html.GetEnumSelectList<FuelType>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="Transmission" class="form-label"></label>
        <select asp-for="Transmission" class="form-select" asp-items="Html.GetEnumSelectList<TransmissionType>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="DailyRate" class="form-label"></label>
        <input asp-for="DailyRate" class="form-control" step="0.01" />
    </div>

    <div class="col-md-4">
        <label asp-for="SupplierId" class="form-label">Supplier</label>
        <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="BranchId" class="form-label">Branch</label>
        <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId"></select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Save Vehicle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}