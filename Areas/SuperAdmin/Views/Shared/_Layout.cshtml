<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EaziLease Admin Portal</title>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />


<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="SuperAdmin" asp-action="Index" asp-controller="SuperDashboard">
                EaziLease <small class="text-warning">Admin</small>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#superNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="superNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                   <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                            User Portal
                        </a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" asp-area="SuperAdmin" asp-controller="SuperDashboard" asp-action="Index">
                            Dashboard
                        </a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link" asp-area="SuperAdmin" asp-controller="UserManagement" asp-action="Index">
                             User Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="SuperAdmin" asp-controller="RateOverride" asp-action="Index">
                            Rate Overrides
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link text-success fw-bold">
                            <i class="bi bi-shield-check-fill"></i> Admin
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-area="SuperAdmin" asp-controller="SuperDashboard" asp-action="Exit">
                            <i class="bi bi-box-arrow-left"></i> Exit Admin Portal
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>