@using EaziLease.Domain.Entities
@model Vehicle

@{
    ViewData["Title"] = "Onboard New Vehicle";
}

<style>
    .form-card {
        background: white;
        border-radius: 20px;
        border: none;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .section-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #f1f5f9;
    }

    .section-icon {
        width: 32px;
        height: 32px;
        background: #eff6ff;
        color: #3b82f6;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        font-size: 0.9rem;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 0.4rem;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 0.6rem 1rem;
        border: 1px solid #e2e8f0;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
    }

    .btn-create {
        background: linear-gradient(135deg, #3b82f6 0%, #1e3a8a 100%);
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(59, 130, 246, 0.3);
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO FLEET
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Vehicle Onboarding</h1>
                <p class="text-muted">Register a new asset into the EaziLease management system.</p>
            </div>

            <form asp-action="Create" class="form-card p-4 p-md-5">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                <div class="section-header">
                    <div class="section-icon"><i class="fas fa-id-card"></i></div>
                    <h5 class="mb-0 fw-bold">Vehicle Identity</h5>
                </div>
                
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="RegistrationNumber" class="form-label">Registration Plate</label>
                        <input asp-for="RegistrationNumber" class="form-control" placeholder="e.g. CA 123-456" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="VIN" class="form-label">VIN Number</label>
                        <input asp-for="VIN" class="form-control" placeholder="17-digit code" />
                        <span asp-validation-for="VIN" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Manufacturer" class="form-label">Make</label>
                        <input asp-for="Manufacturer" class="form-control" placeholder="Toyota" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Model" class="form-label">Model</label>
                        <input asp-for="Model" class="form-control" placeholder="Corolla Cross" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Year" class="form-label">Year</label>
                        <input asp-for="Year" class="form-control" placeholder="2024" />
                    </div>
                </div>

                <div class="section-header">
                    <div class="section-icon"><i class="fas fa-cogs"></i></div>
                    <h5 class="mb-0 fw-bold">Technical Specifications</h5>
                </div>
                
                <div class="row g-4 mb-5">
                    <div class="col-md-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="FuelType" class="form-label"></label>
                        <select asp-for="FuelType" class="form-select" asp-items="Html.GetEnumSelectList<EaziLease.Models.FuelType>()"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Transmission" class="form-label"></label>
                        <select asp-for="Transmission" class="form-select" asp-items="Html.GetEnumSelectList<EaziLease.Models.TransmissionType>()"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="OdometerReading" class="form-label">Current Odometer</label>
                        <div class="input-group">
                            <input asp-for="OdometerReading" class="form-control" />
                            <span class="input-group-text bg-light border-start-0 small text-muted">KM</span>
                        </div>
                    </div>
                </div>

                <div class="section-header">
                    <div class="section-icon"><i class="fas fa-wallet"></i></div>
                    <h5 class="mb-0 fw-bold">Commercial & Allocation</h5>
                </div>
                
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <label asp-for="DailyRate" class="form-label">Daily Leasing Rate</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted">R</span>
                            <input asp-for="DailyRate" class="form-control border-start-0" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="SupplierId" class="form-label">Procured From</label>
                        <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.Supplier"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="BranchId" class="form-label">Assigned Branch</label>
                        <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PurchasePrice" class="form-label">Purchase Price</label>
                        <input asp-for="PurchasePrice" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PurchaseDate" class="form-label">Date Acquired</label>
                        <input asp-for="PurchaseDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="LastServiceDate" class="form-label">Last Known Service</label>
                        <input asp-for="LastServiceDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 border-top pt-4">
                    <a asp-action="Index" class="btn btn-light px-4 py-2 text-muted fw-bold">Cancel</a>
                    <button type="submit" class="btn btn-primary btn-create px-5">
                        <i class="fas fa-save me-2"></i>SAVE VEHICLE
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}