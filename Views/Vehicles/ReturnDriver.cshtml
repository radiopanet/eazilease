@model EaziLease.Models.Vehicle

@{
    ViewData["Title"] = "Return Driver Assignment";
}

<style>
    .return-driver-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }
    .driver-profile-header {
        background: #fffbeb; /* Light warning amber */
        border-bottom: 1px solid #fef3c7;
        padding: 2.5rem;
        text-align: center;
    }
    .driver-avatar-circle {
        width: 80px;
        height: 80px;
        background: white;
        color: #d97706;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
        box-shadow: 0 4px 12px rgba(217, 119, 6, 0.15);
    }
    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="mb-4 text-center">
                <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">End Driver Assignment</h1>
            </div>

            <div class="card return-driver-card">
                <div class="driver-profile-header">
                    <div class="driver-avatar-circle">
                        <i class="fas fa-user-slash"></i>
                    </div>
                    <h4 class="fw-bold text-dark mb-1">@Model.CurrentDriver?.FullName</h4>
                    <p class="text-muted mb-0">Releasing from vehicle: <strong>@Model.RegistrationNumber</strong></p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="ReturnDriver" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <span class="form-section-title">Assignment Termination</span>

                        <div class="mb-5">
                            <label class="form-label fw-bold small text-muted">EFFECTIVE RETURN DATE</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-end-0"><i class="far fa-calendar-times text-muted"></i></span>
                                <input type="date" name="returnDate" class="form-control border-start-0 shadow-none" placeholder="Select date..." />
                            </div>
                            <div class="form-text mt-2 small text-muted">
                                <i class="fas fa-info-circle me-1"></i> 
                                If left blank, the system will log the return as of <strong>Today (@DateTime.Now.ToString("dd MMM yyyy"))</strong>.
                            </div>
                        </div>

                        <div class="alert alert-light border-0 rounded-4 p-3 mb-5">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-key text-warning me-3 fs-4"></i>
                                <div class="small text-muted">
                                    By confirming, the driver's keys will be logged as returned and the vehicle status will be updated for its next assignment.
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold shadow-sm py-3 text-dark">
                                <i class="fas fa-check-circle me-2"></i>Confirm Handover & Release
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link text-muted fw-bold text-decoration-none">
                                Cancel and Keep Assignment
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>