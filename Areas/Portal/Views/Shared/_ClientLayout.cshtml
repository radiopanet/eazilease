<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EaziLease Client Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root { --portal-primary: #2563eb; } /* Custom blue for clients */
        .sidebar { background: #f8fafc; border-right: 1px solid #e2e8f0; height: 100vh; position: fixed; }
        .nav-link.active { color: var(--portal-primary); font-weight: bold; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar p-4">
                <h5 class="fw-bold text-primary mb-4">EaziLease Portal</h5>
                <ul class="nav flex-column gap-2">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="ClientPortal" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="ClientPortal" asp-controller="Leases" asp-action="MyFleet">My Fleet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="ClientPortal" asp-controller="Billing" asp-action="Invoices">Billing</a>
                    </li>
                </ul>
            </nav>

            <main class="col-md-10 ms-sm-auto px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>