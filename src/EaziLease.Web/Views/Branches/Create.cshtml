@model EaziLease.Domain.Entities.Branch

@{
    ViewData["Title"] = "Register New Hub";
}

<style>
    .branch-creation-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
    }
    .form-section-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f1f5f9;
    }
    .section-icon {
        width: 42px;
        height: 42px;
        background: #f0fdf4;
        color: #16a34a;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1.2rem;
    }
    .form-label {
        font-weight: 700;
        font-size: 0.75rem;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .input-group-text {
        background-color: #f8fafc;
        border-right: none;
        color: #94a3b8;
    }
    .form-control {
        border-left: none;
        padding: 0.75rem;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #dee2e6;
    }
    .code-input {
        font-family: 'Monaco', 'Consolas', monospace;
        letter-spacing: 2px;
        text-transform: uppercase;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="mb-4 d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h3 fw-bold text-dark mb-1">Establish New Hub</h1>
                    <p class="text-muted small">Add a new physical location to your operational network.</p>
                </div>
                <a asp-action="Index" class="btn btn-light btn-sm px-3 rounded-pill fw-bold text-muted">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </div>

            <div class="card branch-creation-card">
                <div class="card-body p-4 p-md-5">
                    <form method="post" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-4"></div>

                        <div class="form-section-header">
                            <div class="section-icon"><i class="fas fa-warehouse"></i></div>
                            <h5 class="fw-bold mb-0">Hub Identity</h5>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label">Branch Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-signature"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="e.g. Johannesburg Central Hub" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label">System Code</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input asp-for="Code" class="form-control code-input" placeholder="JHB-01" />
                                </div>
                                <span asp-validation-for="Code" class="text-danger small"></span>
                                <div class="form-text small text-muted">Unique 3-6 digit ID</div>
                            </div>
                        </div>

                        <div class="form-section-header">
                            <div class="section-icon"><i class="fas fa-map-marker-alt"></i></div>
                            <h5 class="fw-bold mb-0">Location & Logistics</h5>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label">Physical Street Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-road"></i></span>
                                    <input asp-for="Address" class="form-control" placeholder="123 Fleet Street" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="City" class="form-label">City / Region</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    <input asp-for="City" class="form-control" placeholder="Johannesburg" />
                                </div>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-light px-4 fw-bold text-muted">Discard</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm rounded-3">
                                <i class="fas fa-plus-circle me-2"></i>Initialize Hub
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}