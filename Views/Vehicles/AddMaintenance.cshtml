@model VehicleMaintenance
@{
    var vehicle = ViewBag.Vehicle as EaziLease.Models.Vehicle;
    ViewData["Title"] = "Add Maintenance Record";
}

<style>
    .maintenance-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }
    .vehicle-preview-sidebar {
        background: #f8fafc;
        border-right: 1px solid #e2e8f0;
    }
    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        display: block;
    }
    .planning-alert-pill {
        background: #fff7ed;
        border: 1px solid #fed7aa;
        color: #9a3412;
        padding: 12px;
        border-radius: 12px;
        font-size: 0.85rem;
    }
    .custom-switch .form-check-input {
        width: 3rem;
        height: 1.5rem;
        cursor: pointer;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-11">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Log Maintenance Record</h1>
            </div>

            <div class="card maintenance-card">
                <div class="row g-0">
                    <div class="col-lg-4 vehicle-preview-sidebar p-4 p-md-5">
                        <span class="form-section-title">Asset Context</span>
                        
                        <div class="mb-5">
                            <h4 class="fw-bold mb-1">@vehicle?.Manufacturer @vehicle?.Model</h4>
                            <span class="badge bg-primary px-3 py-2 rounded-pill">
                                <i class="fas fa-hashtag me-1"></i> @vehicle?.RegistrationNumber
                            </span>
                        </div>

                        <div id="immediateInfo">
                            <h6 class="fw-bold text-dark small mb-3">CURRENT ODOMETER</h6>
                            <div class="h4 fw-bold text-primary mb-4">@vehicle?.OdometerReading.ToString("N0") <span class="small text-muted">KM</span></div>
                        </div>

                        <div class="planning-alert-pill shadow-sm" id="modeNotice">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-info-circle mt-1 me-2"></i>
                                <div>
                                    <strong id="modeTitle">Standard Log</strong>
                                    <p class="small mb-0 mt-1" id="modeDesc">Recording service work that has already been executed.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8 p-4 p-md-5">
                        <form asp-action="AddMaintenance" method="post">
                            <input type="hidden" asp-for="VehicleId" />

                            <div class="d-flex justify-content-between align-items-center mb-5">
                                <span class="form-section-title mb-0">Maintenance Details</span>
                                <div class="form-check form-switch custom-switch">
                                    <input class="form-check-input" type="checkbox" id="scheduleFuture">
                                    <label class="form-check-label fw-bold text-muted small ms-2" for="scheduleFuture">PLAN FUTURE</label>
                                </div>
                            </div>

                            <div id="immediateFields">
                                <div class="row g-4 mb-4">
                                    <div class="col-md-7">
                                        <label asp-for="GarageName" class="form-label fw-bold small text-muted">SERVICE CENTER</label>
                                        <input asp-for="GarageName" class="form-control" placeholder="e.g. Bosch Workshop" />
                                    </div>
                                    <div class="col-md-5">
                                        <label asp-for="ServiceDate" class="form-label fw-bold small text-muted">DATE COMPLETED</label>
                                        <input asp-for="ServiceDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    </div>
                                </div>

                                <div class="row g-4 mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="MileageAtService" class="form-label fw-bold small text-muted">MILEAGE AT SERVICE (KM)</label>
                                        <input asp-for="MileageAtService" class="form-control" type="number" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Cost" class="form-label fw-bold small text-muted">TOTAL COST (ZAR)</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light text-muted">R</span>
                                            <input asp-for="Cost" class="form-control fw-bold" type="number" step="0.01" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="futureFields" style="display: none;">
                                <div class="row g-4 mb-4">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-muted">SCHEDULED DATE</label>
                                        <input type="date" name="ScheduledDate" class="form-control border-primary" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-muted">SCHEDULED MILEAGE (KM)</label>
                                        <input type="number" name="ScheduledMileage" class="form-control border-primary" placeholder="Planned km..." />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-bold small text-muted">MAINTENANCE TYPE</label>
                                        <select name="Type" class="form-select">
                                            <option value="Routine">Routine Service</option>
                                            <option value="Repair">Necessary Repair</option>
                                            <option value="Inspection">Safety Inspection</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-5">
                                <label asp-for="Description" class="form-label fw-bold small text-muted">WORK DESCRIPTION / REASON</label>
                                <textarea asp-for="Description" class="form-control" rows="3" required placeholder="Describe the maintenance event..."></textarea>
                            </div>

                            <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-light px-4 fw-bold text-muted">Cancel</a>
                                <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm rounded-3">
                                    <i class="fas fa-save me-2"></i> Save Maintenance
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const scheduleCheckbox = document.getElementById('scheduleFuture');
        const futureFields = document.getElementById('futureFields');
        const immediateFields = document.getElementById('immediateFields');
        const modeTitle = document.getElementById('modeTitle');
        const modeDesc = document.getElementById('modeDesc');

        scheduleCheckbox.addEventListener('change', function() {
            if(this.checked) {
                futureFields.style.display = 'block';
                immediateFields.style.display = 'none';
                modeTitle.innerText = "Future Planning";
                modeDesc.innerText = "Setting targets for future preventative maintenance.";
            } else {
                futureFields.style.display = 'none';
                immediateFields.style.display = 'block';
                modeTitle.innerText = "Standard Log";
                modeDesc.innerText = "Recording service work that has already been executed.";
            }
        });
    </script>
}