@{
    ViewData["Title"] = "Restricted Access";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="mb-4">
                <i class="fas fa-shield-alt fa-5x text-danger opacity-25"></i>
            </div>
            <h1 class="fw-bold text-dark">Access Restricted</h1>
            <p class="text-muted fs-5">
                Apologies, but you do not have the required permissions to view the 
                <strong>Internal Admin Dashboard</strong>.
            </p>
            <hr class="my-4 w-25 mx-auto">
            <p class="small text-muted mb-4">
                If you believe this is an error, please contact your EaziLease account manager. 
                Otherwise, return to your secure portal below.
            </p>
            
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-area="ClientPortal" asp-controller="Home" asp-action="Index" 
                   class="btn btn-primary btn-lg px-4 gap-3 rounded-pill shadow-sm">
                    Back to Client Portal
                </a>
                <a asp-controller="Home" asp-action="Contact" 
                   class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                    Support
                </a>
            </div>
        </div>
    </div>
</div>