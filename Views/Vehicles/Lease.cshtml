@model VehicleLease

@{
    ViewData["Title"] = "Activate Lease";
}

<style>
    .lease-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
    }
    .summary-panel {
        background: #f8fafc;
        border-left: 1px solid #e2e8f0;
        border-radius: 0 20px 20px 0;
    }
    .form-section-title {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #64748b;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
    }
    .date-input-group {
        position: relative;
    }
    .date-input-group i {
        position: absolute;
        right: 15px;
        top: 40px;
        color: #94a3b8;
    }
    #creditWarning {
        border: none;
        border-left: 4px solid #f59e0b;
        background: #fffbeb;
        color: #92400e;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-xl-10 mx-auto">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Lease Activation</h1>
            </div>

            <div class="card lease-card overflow-hidden">
                <div class="row g-0">
                    <div class="col-lg-7 p-4 p-md-5">
                        <form asp-action="Lease" method="post">
                            <input type="hidden" asp-for="VehicleId" />
                            <input type="hidden" asp-for="Id" />

                            <div id="creditWarning" class="alert d-none mb-4 shadow-sm animate__animated animate__fadeIn">
                                <div class="d-flex">
                                    <i class="fas fa-exclamation-triangle me-3 mt-1"></i>
                                    <div>
                                        <span class="fw-bold d-block">Credit Limit Alert</span>
                                        <small>This lease amount may exceed the client's currently approved credit ceiling.</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-section-title">Lease Parameters</div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small">SELECT CLIENT</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-building text-primary"></i></span>
                                    <select asp-for="ClientId" class="form-select border-start-0" asp-items="ViewBag.ClientId"></select>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0 date-input-group">
                                    <label asp-for="LeaseStartDate" class="form-label fw-bold small">COMMENCEMENT DATE</label>
                                    <input asp-for="LeaseStartDate" class="form-control" type="date" value="@Model.LeaseStartDate.ToString("yyyy-MM-dd")" />
                                    <i class="far fa-calendar-alt"></i>
                                </div>
                                <div class="col-md-6 date-input-group">
                                    <label asp-for="LeaseEndDate" class="form-label fw-bold small">EXPIRATION DATE</label>
                                    <input asp-for="LeaseEndDate" class="form-control" type="date" value="@Model.LeaseEndDate.ToString("yyyy-MM-dd")" />
                                    <i class="far fa-calendar-check"></i>
                                </div>
                            </div>

                            <div class="mb-5">
                                <label asp-for="MonthlyRate" class="form-label fw-bold small">CONTRACTED MONTHLY RATE</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light text-muted border-end-0">R</span>
                                    <input asp-for="MonthlyRate" class="form-control bg-light border-start-0 fw-bold" readonly />
                                </div>
                                <small class="text-muted">The monthly rate is fixed based on the vehicle's standard daily rate.</small>
                            </div>

                            <div class="d-flex gap-3 pt-4 border-top">
                                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-3">
                                    <i class="fas fa-file-contract me-2"></i>Activate Lease
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-light btn-lg px-4 text-muted">Cancel</a>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-5 summary-panel p-4 p-md-5">
                        <div class="form-section-title">Asset Summary</div>
                        
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-primary text-white rounded-3 p-3 me-3">
                                <i class="fas fa-car fa-2x"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-0">@Model.Vehicle?.Manufacturer @Model.Vehicle?.Model</h5>
                                <span class="badge bg-primary-subtle text-primary">@Model.Vehicle?.RegistrationNumber</span>
                            </div>
                        </div>

                        <div class="p-3 bg-white rounded-3 border mb-4">
                            <div class="row text-center">
                                <div class="col-6 border-end">
                                    <small class="text-muted d-block">Year</small>
                                    <strong class="text-dark">@Model.Vehicle?.Year</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Fuel</small>
                                    <strong class="text-dark">@Model.Vehicle?.FuelType</strong>
                                </div>
                            </div>
                        </div>

                        <div class="form-section-title mt-5">Lease Impact</div>
                        <ul class="list-unstyled">
                            <li class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Monthly Revenue</span>
                                <span class="fw-bold text-success">+ @Model.MonthlyRate.ToString("C")</span>
                            </li>
                            <li class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Status Transition</span>
                                <span class="badge bg-info-subtle text-info">Available &rarr; Leased</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Improved Credit Warning Logic
    document.addEventListener('DOMContentLoaded', function() {
        const rateField = document.querySelector('[name="MonthlyRate"]');
        const clientSelect = document.querySelector('[name="ClientId"]');
        const warning = document.getElementById('creditWarning');

        function checkCredit() {
            // In a real app, you'd fetch this via AJAX when the client changes
            const rate = parseFloat(rateField.value) || 0;
            const currentCommitted = @(Model.Client?.CurrentCommittedAmount ?? 0); 
            const limit = @(Model.Client?.CreditLimit ?? 0);

            if (limit > 0 && (currentCommitted + rate > limit)) {
                warning.classList.remove('d-none');
            } else {
                warning.classList.add('d-none');
            }
        }

        clientSelect.addEventListener('change', checkCredit);
        checkCredit(); // Run on load
    });
</script>