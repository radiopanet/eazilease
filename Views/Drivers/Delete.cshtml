@model EaziLease.Models.Driver

@{
    ViewData["Title"] = "Confirm Delete: " + Model.LicenseNumber;
}

<h1 class="h3 mb-4 text-danger">Confirm Driver Deletion</h1>
<hr />

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Warning!</h4>
            <p>You are about to move the following driver to the trash. This action will mark the driver as deleted but preserve its data.</p>
        </div>
        
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="card p-4 shadow-sm">
            
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FullName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LicenseNumber)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LicenseExpiry)</dd>
                
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>
                
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CurrentVehicle!.Model)</dd>
                
            </dl>
            
            <div class="d-flex justify-content-between pt-4 mt-3 border-top">
                <button type="submit" class="btn btn-danger" style="width:180px;">
                    <i class="bi bi-trash-fill"></i> Move to Trash
                </button>
                <a asp-action="Index" class="btn btn-secondary" style="width:180px;">Cancel and Back to List</a>
            </div>
        </form>
    </div>
</div>