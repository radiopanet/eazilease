@model VehicleMaintenance
<h4>Add Maintenance Record</h4>

<form asp-action="AddMaintenance">
    <input type="hidden" asp-for="VehicleId" />

    <div class="mb-3">
        <label asp-for="GarageName" class="form-label">Garage Name</label>
        <input asp-for="GarageName" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ServiceDate" class="form-label"></label>
        <input asp-for="ServiceDate" type="date" class="form-control")/>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Service Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Cost (R)</label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="MileageAtService" class="form-label">MillageAtService</label>
        <input asp-for="MileageAtService" type="number" class="form-control" step="1" />
    </div>

     <div class="mb-3">
        <label asp-for="InvoiceNumber" class="form-label">Invoice#</label>
        <input asp-for="InvoiceNumber" type="text" class="form-control" />
    </div>

     <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
    </div>
     <div class="mb-3">
        <label class="form-label">Is Warranty Work <span class="text-danger">*</span></label>
        <select asp-for="IsWarrantyWork" class="form-select" required>
            <option value="">Please Select...</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <div asp-validation-for="IsWarrantyWork" class="text-danger"></div>
    </div>

    <button type="submit" class="btn btn-success">Save Maintenance Record</button>
</form>