@model VehicleMaintenance

@{
    ViewData["Title"] = "Add Maintenance Record";
}

<style>
    .maintenance-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
    }
    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #64748b;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        display: block;
        border-bottom: 1px solid #f1f5f9;
        padding-bottom: 0.5rem;
    }
    .warranty-alert {
        background-color: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 12px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Log Maintenance Record</h1>
                <p class="text-muted small">Record service history to maintain asset value and compliance.</p>
            </div>

            <form asp-action="AddMaintenance" class="card maintenance-card p-4 p-md-5">
                <input type="hidden" asp-for="VehicleId" />

                <span class="form-section-title">Service Provider & Timeline</span>
                <div class="row g-4 mb-5">
                    <div class="col-md-8">
                        <label asp-for="GarageName" class="form-label fw-bold small text-muted">GARAGE / SERVICE CENTER</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-tools text-muted"></i></span>
                            <input asp-for="GarageName" type="text" class="form-control border-start-0" placeholder="e.g. Bosch Service Center" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ServiceDate" class="form-label fw-bold small text-muted">SERVICE DATE</label>
                        <input asp-for="ServiceDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <span class="form-section-title">Technical Log</span>
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="MileageAtService" class="form-label fw-bold small text-muted">ODOMETER AT SERVICE</label>
                        <div class="input-group">
                            <input asp-for="MileageAtService" type="number" class="form-control border-end-0" placeholder="0" />
                            <span class="input-group-text bg-light border-start-0 fw-bold">KM</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IsWarrantyWork" class="form-label fw-bold small text-muted">WARRANTY STATUS</label>
                        <select asp-for="IsWarrantyWork" class="form-select border-2" required>
                            <option value="">Is this warranty work?</option>
                            <option value="false">Standard Paid Service</option>
                            <option value="true">Covered by Warranty</option>
                        </select>
                        <span asp-validation-for="IsWarrantyWork" class="text-danger small"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold small text-muted">SERVICE DESCRIPTION</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Primary reason for visit (e.g. 60,000km Major Service)"></textarea>
                    </div>
                </div>

                <span class="form-section-title">Financial & Documentation</span>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="Cost" class="form-label fw-bold small text-muted">TOTAL COST (ZAR)</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0 text-muted">R</span>
                            <input asp-for="Cost" class="form-control border-start-0 fw-bold" type="number" step="0.01" placeholder="0.00" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="InvoiceNumber" class="form-label fw-bold small text-muted">INVOICE NUMBER</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-file-invoice text-muted"></i></span>
                            <input asp-for="InvoiceNumber" type="text" class="form-control border-start-0" placeholder="e.g. INV-9901" />
                        </div>
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label fw-bold small text-muted">ADDITIONAL INTERNAL NOTES</label>
                        <textarea asp-for="Notes" class="form-control bg-light" rows="2" placeholder="Internal observations, upcoming repairs needed, etc..."></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                    <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted fw-bold">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-success btn-lg px-5 fw-bold shadow-sm rounded-3">
                        <i class="fas fa-save me-2"></i>Save Maintenance Record
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}