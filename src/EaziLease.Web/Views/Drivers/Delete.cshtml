@model EaziLease.Domain.Entities.Driver

@{
    ViewData["Title"] = "Offboard Driver";
}

<style>
    .termination-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }
    .warning-banner {
        background: #fff1f2;
        border-bottom: 1px solid #ffe4e6;
        padding: 2.5rem;
        text-align: center;
    }
    .warning-icon-wrapper {
        width: 70px;
        height: 70px;
        background: #ffe4e6;
        color: #e11d48;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 1.2rem;
    }
    .driver-record-summary {
        background: #f8fafc;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
        padding: 1.5rem;
    }
    .data-label {
        font-size: 0.7rem;
        font-weight: 800;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .data-value {
        font-weight: 600;
        color: #1e293b;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO PERSONNEL DIRECTORY
                </a>
            </div>

            <div class="card termination-card">
                <div class="warning-banner">
                    <div class="warning-icon-wrapper shadow-sm">
                        <i class="fas fa-user-slash"></i>
                    </div>
                    <h3 class="fw-bold text-danger mb-1">Confirm Offboarding</h3>
                    <p class="text-muted mb-0">You are about to archive this driver's profile.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="alert alert-secondary border-0 rounded-4 p-3 mb-4 d-flex align-items-center small">
                        <i class="fas fa-info-circle me-3 fs-4 opacity-50"></i>
                        <div>
                            This driver will be moved to the <strong>Archive</strong>. All historical trip data and accident reports will be preserved for legal compliance.
                        </div>
                    </div>

                    <div class="driver-record-summary mb-5">
                        <div class="row g-4">
                            <div class="col-12 border-bottom pb-3">
                                <span class="data-label d-block">Operator Full Name</span>
                                <span class="h5 fw-bold text-dark mb-0">@Model.FullName</span>
                            </div>
                            <div class="col-6">
                                <span class="data-label d-block">License Number</span>
                                <span class="data-value">@Model.LicenseNumber</span>
                            </div>
                            <div class="col-6 text-end">
                                <span class="data-label d-block">License Status</span>
                                <span class="badge @(Model.LicenseExpiry > DateTime.Now ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger") rounded-pill">
                                    @(Model.LicenseExpiry > DateTime.Now ? "Valid" : "Expired")
                                </span>
                            </div>
                            <div class="col-6">
                                <span class="data-label d-block">Contact Email</span>
                                <span class="data-value small">@Model.Email</span>
                            </div>
                            <div class="col-6 text-end">
                                <span class="data-label d-block">Lifetime Accidents</span>
                                <span class="data-value @(Model.AccidentCount > 0 ? "text-danger" : "")">@Model.AccidentCount</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger btn-lg fw-bold py-3 shadow-sm rounded-3">
                                <i class="fas fa-archive me-2"></i>Archive Driver Profile
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted fw-bold text-decoration-none">
                                Cancel and Keep Personnel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>