@model EaziLease.Models.ViewModels.FinanceDashboardViewModel

@{
    ViewData["Title"] = "Executive Finance Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Fleet Financial Performance</h2>
            <p class="text-muted small">Real-time revenue and cost reconciliation</p>
        </div>
        
        <div class="d-flex gap-2">
            <form asp-action="RefreshSnapshot" method="post" id="refreshForm">
                <button type="submit" class="btn btn-white border shadow-sm rounded-pill px-3 fw-bold text-primary" onclick="showLoading()">
                    <i class="fas fa-sync-alt me-2" id="refreshIcon"></i> 
                    <span id="refreshText">Refresh Data</span>
                </button>
            </form>
            <span class="badge bg-primary-subtle text-primary px-3 py-2 d-flex align-items-center">Last 30 Days</span>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-5">
        <div class="card-header bg-white py-3 border-0">
            <h5 class="mb-0 fw-bold text-muted text-uppercase small">Financial Overview</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4 text-center">
                <div class="col-md-3 border-end">
                    <p class="text-muted small mb-1">Total Gross Revenue</p>
                    <h3 class="fw-bold mb-0">@Model.TotalRevenue.ToString("C0")</h3>
                    <small class="text-success">+ @Model.TotalPenalties.ToString("C0") penalties</small>
                </div>
                <div class="col-md-3 border-end">
                    <p class="text-muted small mb-1">Operating Costs</p>
                    <h3 class="fw-bold text-danger mb-0">@Model.TotalCosts.ToString("C0")</h3>
                    <small class="text-muted">Incl. Maintenance</small>
                </div>
                <div class="col-md-3 border-end">
                    <p class="text-muted small mb-1">Net Profit</p>
                    <h3 class="fw-bold text-@(Model.NetProfit >= 0 ? "success" : "danger") mb-0">
                        @Model.NetProfit.ToString("C0")
                    </h3>
                    <small class="text-muted">Post-recovery</small>
                </div>
                <div class="col-md-3">
                    <p class="text-muted small mb-1">Performance (ROI)</p>
                    <h3 class="fw-bold mb-0">@Model.RoiPercentage.ToString("F1")%</h3>
                    <div class="progress mt-2 mx-auto" style="width: 60%; height: 6px;">
                        <div class="progress-bar bg-primary" style="width: @(Math.Min(Model.RoiPercentage, 100))%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">Recent Lease Reconciliations</h5>
            <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Export Report</button>
        </div>
        <div class="table-responsive p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4">Asset / Registration</th>
                        <th>Client</th>
                        <th>Revenue</th>
                        <th>Costs</th>
                        <th>Net Profit</th>
                        <th class="text-end pe-4">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.RecentSummaries.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">No lease reconciliations found for this period.</td>
                        </tr>
                    }
                    @foreach (var s in Model.RecentSummaries)
                    {
                        var netProfit = s.TotalLeaseRevenue - s.TotalCost;
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@s.Lease?.Vehicle?.Manufacturer @s.Lease?.Vehicle?.Model</div>
                                <div class="small text-muted">@s.Lease?.Vehicle?.RegistrationNumber</div>
                            </td>
                            <td>@s.Lease?.Client?.CompanyName</td>
                            <td class="text-success fw-bold">@s.TotalLeaseRevenue.ToString("C")</td>
                            <td class="text-danger small">@s.TotalCost.ToString("C")</td>
                            <td class="fw-bold text-@(netProfit >= 0 ? "success" : "danger")">
                                @netProfit.ToString("C")
                            </td>
                            <td class="text-end pe-4">
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Reconciled</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function showLoading() {
        const icon = document.getElementById('refreshIcon');
        const text = document.getElementById('refreshText');
        icon.classList.add('fa-spin');
        text.innerText = "Recalculating...";
    }
</script>