@model EaziLease.Models.Driver

@{
    ViewData["Title"] = "Create Supplier";
}

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Driver</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3 row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="LicenseNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="LicenseExpiry" class="form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LicenseExpiry" type="date" class="form-control" />
                <span asp-validation-for="LicenseExpiry" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="AccidentCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AccidentCount" class="form-control" type="number" />
                <span asp-validation-for="AccidentCount" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <fieldset asp-for="IsActive" class="form-control">
                    <legend class="col-sm-2 col-form-label">Select Status</legend>
                    <input type="radio" class="form-control" value="true">
                    <label asp-for="IsActive" class="col-sm-2 col-form-label">True</label>
                    <input type="radio" class="form-control" value="false">
                    <label asp-for="IsActive" class="col-sm-2 col-form-label">False</label>
                </fieldset>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}