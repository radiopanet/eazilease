@using EaziLease.Domain.Entities
@using EaziLease.Web.ViewModels
@model ExtendLeaseViewModel

@{
    ViewData["Title"] = "Extend Lease";
}

<style>
    .extend-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }

    .info-strip {
        background: #f0f7ff;
        border-bottom: 1px solid #e0e7ff;
        padding: 1.5rem 2.5rem;
    }

    .timeline-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2rem;
        background: #f8fafc;
        border-radius: 16px;
        margin-bottom: 2rem;
        border: 1px dashed #cbd5e1;
    }

    .date-pill {
        text-align: center;
        padding: 1rem;
    }

    .arrow-icon {
        font-size: 1.5rem;
        color: #3b82f6;
        animation: slideRight 1.5s infinite;
    }

    @@keyframes slideRight {
        0% { transform: translateX(0); opacity: 0.5; }
        50% { transform: translateX(10px); opacity: 1; }
        100% { transform: translateX(0); opacity: 0.5; }
    }

    .form-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Extend Lease Agreement</h1>
            </div>

            <div class="card extend-card">
                <div class="info-strip d-flex justify-content-between align-items-center">
                    <div>
                        <span class="form-section-title mb-1">Contracting Client</span>
                        <h5 class="fw-bold mb-0 text-primary">@Model.ClientName</h5>
                    </div>
                    <div class="text-end">
                        <span class="form-section-title mb-1">Vehicle</span>
                        <h5 class="fw-bold mb-0">@Model.VehicleRegistration</h5>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="ExtendLease" method="post">
                        <input type="hidden" name="leaseId" value="@Model.LeaseId" />

                        <span class="form-section-title">Lease Timeline Extension</span>
                        
                        <div class="timeline-container">
                            <div class="date-pill">
                                <small class="text-muted d-block text-uppercase fw-bold">Current End Date</small>
                                <span class="h5 fw-bold text-dark">@Model.CurrentEndDate.ToString("dd MMM yyyy")</span>
                            </div>

                            <div class="arrow-icon">
                                <i class="fas fa-chevron-right"></i>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="date-pill bg-white shadow-sm rounded-3 px-4 border border-primary">
                                <small class="text-primary d-block text-uppercase fw-bold">New Expiry</small>
                                <div id="previewDate" class="h5 fw-bold text-primary mb-0">-- --- ----</div>
                            </div>
                        </div>

                        <div class="row g-4 align-items-end">
                            <div class="col-md-7">
                                <label class="form-label fw-bold small text-muted">SELECT NEW END DATE</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white border-end-0 text-primary">
                                        <i class="far fa-calendar-plus"></i>
                                    </span>
                                    <input type="date" name="newEndDate" id="newEndDateInput" class="form-control border-start-0 shadow-none" 
                                           min="@Model.CurrentEndDate.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="p-3 bg-light rounded-3 border">
                                    <small class="text-muted d-block">Standard Daily Rate</small>
                                    <span class="h5 fw-bold">@Model.DailyRate.ToString("C")</span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info border-0 mt-5 rounded-4 d-flex align-items-center">
                            <i class="fas fa-info-circle fa-2x me-3 opacity-50"></i>
                            <div class="small">
                                <strong>Recalculation Notice:</strong> Extending the lease will automatically adjust the monthly billing cycles and update the client's committed credit balance.
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-4 mt-4 border-top">
                            <a asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-light btn-lg px-4 fw-bold text-muted">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-3 fw-bold">
                                <i class="fas fa-file-signature me-2"></i>Confirm Extension
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Real-time preview of the selected date
        const input = document.getElementById('newEndDateInput');
        const preview = document.getElementById('previewDate');

        input.addEventListener('change', function() {
            if (this.value) {
                const date = new Date(this.value);
                const options = { day: '2-digit', month: 'short', year: 'numeric' };
                preview.innerText = date.toLocaleDateString('en-GB', options);
                preview.classList.add('animate__animated', 'animate__pulse');
            }
        });
    </script>
}