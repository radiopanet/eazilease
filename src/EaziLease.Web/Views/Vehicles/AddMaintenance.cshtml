@using EaziLease.Domain.Entities
@model VehicleMaintenance
@{
    var vehicle = ViewBag.Vehicle as Vehicle;
    ViewData["Title"] = "Add Maintenance Record";
}

<style>
    .maintenance-card { background: white; border-radius: 24px; box-shadow: 0 10px 40px rgba(0,0,0,0.08); border: none; overflow: hidden; }
    .vehicle-preview-sidebar { background: #f8fafc; border-right: 1px solid #e2e8f0; }
    .form-section-title { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: #94a3b8; letter-spacing: 0.1em; margin-bottom: 1.5rem; display: block; }
    .planning-alert-pill { background: #fff7ed; border: 1px solid #fed7aa; color: #9a3412; padding: 12px; border-radius: 12px; font-size: 0.85rem; }
    .history-alert-pill { background: #f3e8ff; border: 1px solid #d8b4fe; color: #6b21a8; padding: 12px; border-radius: 12px; font-size: 0.85rem; display: none; }
    .availability-warning { background: #fff1f2; border: 1px solid #fecdd3; color: #9f1239; padding: 12px; border-radius: 12px; font-size: 0.85rem; display: none; }
    .custom-switch .form-check-input { width: 3rem; height: 1.5rem; cursor: pointer; }
    .financial-module { background: #fcfcfd; border: 1px solid #f1f5f9; border-radius: 16px; padding: 20px; }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-11">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO VEHICLE
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">Log Maintenance Record</h1>
            </div>

            <div class="card maintenance-card">
                <div class="row g-0">
                    <div class="col-lg-4 vehicle-preview-sidebar p-4 p-md-5">
                        <span class="form-section-title">Asset Context</span>
                        <div class="mb-5">
                            <h4 class="fw-bold mb-1">@vehicle?.Manufacturer @vehicle?.Model</h4>
                            <span class="badge bg-primary px-3 py-2 rounded-pill">@vehicle?.RegistrationNumber</span>
                        </div>

                        <div id="immediateInfo">
                            <h6 class="fw-bold text-dark small mb-3">CURRENT ODOMETER</h6>
                            <div class="h4 fw-bold text-primary mb-4">@vehicle?.OdometerReading?.ToString("N0") <span class="small text-muted">KM</span></div>
                        </div>

                        <div class="planning-alert-pill shadow-sm mb-3" id="modeNotice">
                            <div class="d-flex align-items-start"><i class="fas fa-info-circle mt-1 me-2"></i>
                                <div><strong id="modeTitle">Standard Log</strong><p class="small mb-0 mt-1" id="modeDesc">Recording executed service work.</p></div>
                            </div>
                        </div>

                        <div class="history-alert-pill shadow-sm mb-3" id="historicalNotice">
                            <div class="d-flex align-items-start"><i class="fas fa-history mt-1 me-2"></i>
                                <div><strong>Archive Entry</strong><p class="small mb-0 mt-1">Bookkeeping only. No fleet status changes.</p></div>
                            </div>
                        </div>

                        <div class="availability-warning shadow-sm" id="availabilityNotice">
                            <div class="d-flex align-items-start"><i class="fas fa-exclamation-triangle mt-1 me-2"></i>
                                <div><strong>Status Impact</strong><p class="small mb-0 mt-1">Vehicle will be marked as <b>InMaintenance</b>.</p></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8 p-4 p-md-5">
                        <form asp-action="AddMaintenance" method="post">
                            <input type="hidden" asp-for="VehicleId" />

                            <div class="d-flex justify-content-between align-items-center mb-5">
                                <span class="form-section-title mb-0">Maintenance Details</span>
                                <div class="d-flex gap-4">
                                    <div class="form-check form-switch custom-switch">
                                        <input class="form-check-input" type="checkbox" id="isHistorical" name="IsHistorical" value="true">
                                        <label class="form-check-label fw-bold text-muted small ms-2" for="isHistorical">HISTORICAL</label>
                                    </div>
                                    <div class="form-check form-switch custom-switch" id="futureSwitchContainer">
                                        <input class="form-check-input" type="checkbox" id="scheduleFuture" name="IsFutureScheduled" value="true">
                                        <label class="form-check-label fw-bold text-muted small ms-2" for="scheduleFuture">PLAN FUTURE</label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="GarageId" class="form-label fw-bold small text-muted">GARAGE / REPAIR SHOP</label>
                                <select asp-for="GarageId" class="form-select border-2" asp-items="@(new SelectList(ViewBag.Garages, "Id", "Name"))">
                                    <option value="">Select Garage (optional)</option>
                                </select>
                            </div>

                            <div id="immediateFields">
                                <div class="row g-4 mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="ServiceDate" class="form-label fw-bold small text-muted">SERVICE DATE *</label>
                                        <input asp-for="ServiceDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                    </div>
                                    <div class="col-md-6 d-flex align-items-end">
                                        <div id="availabilitySection" class="form-check mb-3">
                                            <input type="checkbox" class="form-check-input" id="affectsAvailability" name="AffectsAvailability" value="true" />
                                            <label class="form-check-label small fw-bold text-muted" for="affectsAvailability">Makes vehicle unavailable</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-4 mb-5">
                                    <div class="col-md-6">
                                        <label asp-for="MileageAtService" class="form-label fw-bold small text-muted">MILEAGE AT SERVICE (KM) *</label>
                                        <input asp-for="MileageAtService" class="form-control" type="number" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Cost" class="form-label fw-bold small text-muted">TOTAL COST (ZAR) *</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light text-muted">R</span>
                                            <input asp-for="Cost" class="form-control fw-bold" id="mainCost" type="number" step="0.01" required />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="futureFields" style="display: none;">
                                <div class="row g-4 mb-4">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-muted">SCHEDULED DATE</label>
                                        <input asp-for="ScheduledDate" type="date" class="form-control border-primary" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-muted">SCHEDULED MILEAGE (KM)</label>
                                        <input asp-for="ScheduledMileage" type="number" class="form-control border-primary" placeholder="Planned km..." />
                                    </div>
                                </div>
                            </div>

                            <div class="mb-5">
                                <label asp-for="Description" class="form-label fw-bold small text-muted">WORK DESCRIPTION / REASON *</label>
                                <textarea asp-for="Description" class="form-control" rows="3" required placeholder="Describe the maintenance event..."></textarea>
                            </div>

                            <div class="financial-module mb-5 shadow-sm">
                                <span class="form-section-title">Financial & Insurance Recovery</span>
                                
                                <div class="row g-4 mb-4">
                                    <div class="col-md-6">
                                        <div class="form-check mb-2">
                                            <input type="checkbox" class="form-check-input" id="isBillable" name="IsBillableToClient" value="true" />
                                            <label class="form-check-label fw-bold text-muted small" for="isBillable">Billable to Client (e.g. Damage)</label>
                                        </div>
                                        <div id="billableAmountSection" style="display: none;" class="mt-2">
                                            <label class="form-label small text-muted fw-bold">BILLABLE AMOUNT (R)</label>
                                            <input type="number" name="BillableAmount" id="BillableAmount" class="form-control form-control-sm border-warning" step="0.01" placeholder="Defaults to Cost" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="isWarranty" name="IsWarrantyWork" value="true" />
                                            <label class="form-check-label fw-bold text-muted small" for="isWarranty">Warranty Work (Zero Cost)</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-12">
                                        <label class="form-label small text-muted fw-bold">INSURANCE CLAIM STATUS</label>
                                        <select name="InsuranceClaimStatus" id="InsuranceClaimStatus" class="form-select form-select-sm">
                                            <option value="NA">Not Applicable</option>
                                            <option value="Pending">Pending</option>
                                            <option value="Approved">Approved</option>
                                            <option value="Rejected">Rejected</option>
                                            <option value="Partial">Partial Payment</option>
                                        </select>
                                    </div>
                                </div>

                                <div id="insuranceFields" style="display: none;" class="mt-4 pt-3 border-top">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted fw-bold">CLAIM NUMBER</label>
                                            <input type="text" name="InsuranceClaimNumber" id="InsuranceClaimNumber" class="form-control form-control-sm" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted fw-bold">INSURER NAME</label>
                                            <input type="text" name="InsurerName" id="InsurerName" class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                                <a asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-light px-4 fw-bold text-muted">Cancel</a>
                                <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm rounded-3">
                                    <i class="fas fa-save me-2"></i> Save Maintenance
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Existing UI elements
        const scheduleCheckbox = document.getElementById('scheduleFuture');
        const historicalCheckbox = document.getElementById('isHistorical');
        const affectsAvailability = document.getElementById('affectsAvailability');
        const futureFields = document.getElementById('futureFields');
        const immediateFields = document.getElementById('immediateFields');
        const availabilitySection = document.getElementById('availabilitySection');
        const futureSwitchContainer = document.getElementById('futureSwitchContainer');
        const modeTitle = document.getElementById('modeTitle');
        const modeDesc = document.getElementById('modeDesc');
        const modeNotice = document.getElementById('modeNotice');
        const historicalNotice = document.getElementById('historicalNotice');
        const availabilityNotice = document.getElementById('availabilityNotice');

        // New Financial UI elements
        const billableCheckbox = document.getElementById('isBillable');
        const billableSection = document.getElementById('billableAmountSection');
        const warrantyCheckbox = document.getElementById('isWarranty');
        const insuranceStatus = document.getElementById('InsuranceClaimStatus');
        const insuranceFields = document.getElementById('insuranceFields');
        const mainCostInput = document.getElementById('mainCost');

        function updateUI() {
            if (historicalCheckbox.checked) {
                historicalNotice.style.display = 'block';
                modeNotice.style.display = 'none';
                availabilityNotice.style.display = 'none';
                availabilitySection.style.display = 'none';
                futureSwitchContainer.style.display = 'none';
                immediateFields.style.display = 'block';
                futureFields.style.display = 'none';
                affectsAvailability.checked = false;
                scheduleCheckbox.checked = false;
            } 
            else if (scheduleCheckbox.checked) {
                historicalNotice.style.display = 'none';
                modeNotice.style.display = 'block';
                availabilityNotice.style.display = 'none';
                availabilitySection.style.display = 'block';
                futureSwitchContainer.style.display = 'block';
                modeTitle.innerText = "Future Planning";
                modeDesc.innerText = "Setting targets for future preventative maintenance.";
                immediateFields.style.display = 'none';
                futureFields.style.display = 'block';
            } 
            else {
                historicalNotice.style.display = 'none';
                modeNotice.style.display = 'block';
                availabilitySection.style.display = 'block';
                futureSwitchContainer.style.display = 'block';
                modeTitle.innerText = "Standard Log";
                modeDesc.innerText = "Recording executed service work.";
                immediateFields.style.display = 'block';
                futureFields.style.display = 'none';
                if(affectsAvailability.checked) availabilityNotice.style.display = 'block';
            }
        }

        // Financial Toggles
        billableCheckbox.addEventListener('change', () => {
            billableSection.style.display = billableCheckbox.checked ? 'block' : 'none';
            if (billableCheckbox.checked) warrantyCheckbox.checked = false;
        });

        warrantyCheckbox.addEventListener('change', () => {
            if (warrantyCheckbox.checked) {
                billableCheckbox.checked = false;
                billableSection.style.display = 'none';
                mainCostInput.value = 0; // Standard warranty behavior
            }
        });

        insuranceStatus.addEventListener('change', () => {
            insuranceFields.style.display = insuranceStatus.value !== 'NA' ? 'block' : 'none';
        });

        historicalCheckbox.addEventListener('change', updateUI);
        scheduleCheckbox.addEventListener('change', updateUI);
        affectsAvailability.addEventListener('change', function() {
            availabilityNotice.style.display = (this.checked && !historicalCheckbox.checked) ? 'block' : 'none';
        });

        updateUI();
    </script>
}