@using EaziLease.Web.ViewModels
@model ElevateViewModel

@{
    ViewData["Title"] = "Secure Escalation";
}

<style>
    body {
        background-color: #0f172a; /* Deep Navy/Black */
    }
    .vault-card {
        background: #1e293b;
        border: 1px solid #334155;
        border-radius: 28px;
        overflow: hidden;
    }
    .vault-header {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        padding: 3rem 2rem;
        text-align: center;
        border-bottom: 1px solid #334155;
    }
    .security-shield {
        width: 80px;
        height: 80px;
        background: rgba(245, 158, 11, 0.1); /* Gold/Amber tint */
        color: #f59e0b;
        border: 2px solid #f59e0b;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 0 20px rgba(245, 158, 11, 0.2);
    }
    .form-control-vault {
        background: #0f172a !important;
        border: 1px solid #334155 !important;
        color: #f8fafc !important;
        padding: 1rem;
        border-radius: 12px;
        text-align: center;
        letter-spacing: 0.5em;
        font-size: 1.25rem;
    }
    .form-control-vault:focus {
        border-color: #f59e0b !important;
        box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.1) !important;
    }
    .btn-elevate {
        background: #f59e0b;
        color: #000;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        padding: 1rem;
        border-radius: 12px;
        border: none;
        transition: all 0.3s;
    }
    .btn-elevate:hover {
        background: #fbbf24;
        transform: scale(1.02);
        box-shadow: 0 0 25px rgba(245, 158, 11, 0.4);
    }
    .audit-note {
        font-size: 0.75rem;
        color: #64748b;
        margin-top: 1.5rem;
        text-align: center;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center pt-5">
        <div class="col-lg-5 col-md-8">
            <div class="card vault-card shadow-2xl">
                <div class="vault-header">
                    <div class="security-shield">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h2 class="text-white fw-bold">Elevate Privileges</h2>
                    <p class="text-muted small">Authorization required to enter Super Admin mode</p>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Elevate" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger small mb-4"></div>

                        <div class="mb-4 text-center">
                            <label class="form-label text-muted small fw-bold mb-3">CONFIRM IDENTITY PASSWORD</label>
                            <input type="password" name="password" class="form-control form-control-vault" required autofocus />
                            <span class="text-danger small mt-2 d-block" asp-validation-for="Password"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-elevate">
                                <i class="fas fa-key me-2"></i> Unlock SuperDashboard
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="Dashboard" class="text-decoration-none text-muted small fw-bold">
                            <i class="fas fa-arrow-left me-1"></i> Return to Terminal
                        </a>
                    </div>

                    <p class="audit-note">
                        <i class="fas fa-history me-1"></i> This session escalation will be logged in the system audit trail.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}