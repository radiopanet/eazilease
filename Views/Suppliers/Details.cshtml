@model EaziLease.Models.Supplier
@{
    ViewData["Title"] = "Partner Profile: " + Model.Name;
}

<div class="container-fluid py-4">
    <div class="card border-0 shadow-sm bg-primary text-white p-4 mb-4 rounded-4" style="background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold fs-2 me-4 shadow" style="width: 80px; height: 80px;">
                        @Model.Name.Substring(0, 1)
                    </div>
                    <div>
                        <h1 class="display-6 fw-bold mb-0">@Model.Name</h1>
                        <p class="mb-0 opacity-75"><i class="fas fa-map-marker-alt me-2"></i>@Model.City, @Model.Country</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="bg-white bg-opacity-10 p-3 rounded-4 backdrop-blur">
                    <div class="small opacity-75 text-uppercase">Partner Rating</div>
                    <div class="h3 fw-bold mb-0 text-warning">
                        @Model.AverageRating <i class="fas fa-star ms-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h5 class="fw-bold mb-4">Contact Info</h5>
                <div class="mb-3">
                    <label class="small text-muted text-uppercase d-block">Person</label>
                    <strong class="fs-5">@Model.ContactPerson</strong>
                </div>
                <div class="mb-3">
                    <label class="small text-muted text-uppercase d-block">Email</label>
                    <a href="mailto:@Model.ContactEmail" class="text-decoration-none">@Model.ContactEmail</a>
                </div>
                <div class="mb-4">
                    <label class="small text-muted text-uppercase d-block">Phone</label>
                    <strong>@Model.ContactPhone</strong>
                </div>
                <hr>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning fw-bold">Edit Profile</a>
                    <a asp-action="Index" class="btn btn-light fw-bold">Back to List</a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">Managed Fleet</h5>
                    <span class="badge bg-primary rounded-pill">@(Model.Vehicles?.Count() ?? 0) Units</span>
                </div>
                
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>Vehicle</th>
                                <th>Registration</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Vehicles != null && Model.Vehicles.Any()) {
                                foreach(var v in Model.Vehicles) {
                                    <tr>
                                        <td><strong>@v.Manufacturer @v.Model</strong></td>
                                        <td><code>@v.RegistrationNumber</code></td>
                                        <td><span class="badge bg-info-subtle text-info">@v.Status</span></td>
                                        <td><a asp-controller="Vehicles" asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-light">View</a></td>
                                    </tr>
                                }
                            } else {
                                <tr><td colspan="4" class="text-center py-4 text-muted">No vehicles linked to this supplier.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>