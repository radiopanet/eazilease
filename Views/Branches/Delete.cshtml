@model EaziLease.Models.Branch

@{
    ViewData["Title"] = "Delete Branch";
}

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Branch</h2>
            <hr />
        </div>
        
        <h4 class="text-danger">Are you sure you want to delete this branch?</h4>
        <div class="p-4 rounded border">
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
            
            <div class="mb-3 row">
                <label asp-for="Code" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Code" disabled class="form-control" />
                </div>
            </div>
            
            <div class="mb-3 row">
                <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Address" disabled class="form-control" />
                </div>
            </div>
            
            <div class="mb-3 row">
                <label asp-for="City" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="City" disabled class="form-control" />
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-6">
                    <button type="submit" class="btn btn-danger" style="width:150px">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>