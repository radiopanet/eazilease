@model EaziLease.Models.Branch

@{
    ViewData["Title"] = "Modify Hub Details";
}

<style>
    .edit-branch-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }
    .branch-header-banner {
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        padding: 2rem;
    }
    .branch-id-badge {
        background: #1e293b;
        color: white;
        font-family: 'Monaco', 'Consolas', monospace;
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        font-size: 0.85rem;
        letter-spacing: 1px;
    }
    .form-section-label {
        font-size: 0.75rem;
        font-weight: 800;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        display: block;
    }
    .input-group-text {
        background-color: #ffffff;
        border-right: none;
        color: #94a3b8;
    }
    .form-control {
        border-left: none;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #dee2e6;
    }
    .code-field {
        font-family: 'Monaco', 'Consolas', monospace;
        text-transform: uppercase;
        font-weight: 600;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> RETURN TO NETWORK MAP
                </a>
            </div>

            <div class="card edit-branch-card">
                <div class="branch-header-banner d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white p-3 rounded-4 me-3 shadow-sm">
                            <i class="fas fa-warehouse fs-4"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">@Model.Name</h4>
                            <small class="text-muted">Operational Facility Updates</small>
                        </div>
                    </div>
                    <span class="branch-id-badge shadow-sm">ID: @Model.Code</span>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form method="post" asp-action="Edit">
                        <input asp-for="Id" hidden />
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-4"></div>

                        <span class="form-section-label">Core Identifiers</span>
                        <div class="row g-4 mb-5">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold small text-muted">HUB DISPLAY NAME</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label fw-bold small text-muted">SYSTEM CODE</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input asp-for="Code" class="form-control code-field" />
                                </div>
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>
                        </div>

                        <span class="form-section-label border-top pt-4">Logistics & Location</span>
                        <div class="row g-4 mb-5">
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label fw-bold small text-muted">STREET ADDRESS</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="City" class="form-label fw-bold small text-muted">CITY / PROVINCE</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    <input asp-for="City" class="form-control" />
                                </div>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                            <a asp-action="Index" class="text-muted fw-bold text-decoration-none small">Cancel Changes</a>
                            <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm rounded-3">
                                <i class="fas fa-save me-2"></i>Apply Hub Updates
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}