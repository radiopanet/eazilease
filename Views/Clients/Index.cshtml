@model IEnumerable<EaziLease.Models.Client>

@{
    ViewData["Title"] = "Client Directory";
}

<style>
    .client-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
    }
    .stats-pill {
        background: #f8fafc;
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid #f1f5f9;
    }
    .client-table thead th {
        background: #f8fafc;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: #64748b;
        border: none;
        padding: 1.2rem;
    }
    .client-table tbody td {
        padding: 1.2rem;
        vertical-align: middle;
        border-color: #f1f5f9;
    }
    .avatar-placeholder {
        width: 40px;
        height: 40px;
        background: #e2e8f0;
        color: #475569;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-weight: 700;
        margin-right: 15px;
    }
    .lease-badge {
        background: #eff6ff;
        color: #3b82f6;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 8px;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">Client Directory</h1>
            <p class="text-muted mb-0">Manage corporate accounts and lease portfolios.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-3">
            <i class="fas fa-plus-circle me-2"></i>Onboard New Client
        </a>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stats-pill">
                <small class="text-muted d-block fw-bold mb-1">TOTAL CLIENTS</small>
                <h3 class="fw-bold mb-0">@Model.Count()</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-pill">
                <small class="text-muted d-block fw-bold mb-1">ACTIVE LEASES</small>
                <h3 class="fw-bold mb-0 text-primary">@Model.Sum(x => x.ActiveLeaseCount)</h3>
            </div>
        </div>
    </div>

    <div class="card client-card overflow-hidden">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table client-table mb-0">
                    <thead>
                        <tr>
                            <th>Company Details</th>
                            <th>Primary Contact</th>
                            <th>Contact Info</th>
                            <th class="text-center">Active Leases</th>
                            <th class="text-end">Management</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder">
                                            @obj.CompanyName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@obj.CompanyName</div>
                                            <small class="text-muted">Account ID: #CL-@obj.Id.ToString()</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@obj.ContactPerson</div>
                                </td>
                                <td>
                                    <div class="small"><i class="far fa-envelope me-2 text-muted"></i>@obj.ContactEmail</div>
                                    <div class="small mt-1"><i class="fas fa-phone-alt me-2 text-muted"></i>@obj.ContactPhone</div>
                                </td>
                                <td class="text-center">
                                    <span class="lease-badge">
                                        <i class="fas fa-car-side me-2"></i>@obj.ActiveLeaseCount
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v p-1"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                                            <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@obj.Id">
                                                <i class="fas fa-edit me-2 text-primary"></i> Edit Profile
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@obj.Id">
                                                <i class="fas fa-trash-alt me-2"></i> Terminate Account
                                            </a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                    <i class="fas fa-users-slash fa-3x text-muted"></i>
                </div>
                <h5>No Clients Found</h5>
                <p class="text-muted">Get started by onboarding your first corporate client.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">Add Client</a>
            </div>
        }
    </div>
</div>