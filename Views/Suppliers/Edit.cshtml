@model EaziLease.Models.Supplier
@{
    ViewData["Title"] = (ViewContext.RouteData.Values["action"]?.ToString() == "Edit" ? "Edit" : "Register") + " Supplier";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
                    <i class="fas fa-arrow-left me-1"></i> BACK TO SUPPLIERS
                </a>
                <h1 class="h3 fw-bold text-dark mt-2">@ViewData["Title"]</h1>
            </div>

            <form method="post" class="card border-0 shadow-sm p-4 p-md-5 rounded-4">
                @if(ViewContext.RouteData.Values["action"]?.ToString() == "Edit") { <input asp-for="Id" hidden /> }
                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3"></div>

                <div class="d-flex align-items-center mb-4 pb-2 border-bottom">
                    <div class="bg-primary-subtle text-primary p-2 rounded-3 me-3">
                        <i class="fas fa-building fa-fw"></i>
                    </div>
                    <h5 class="mb-0 fw-bold">Company Profile</h5>
                </div>

                <div class="row g-3 mb-5">
                    <div class="col-md-8">
                        <label asp-for="Name" class="form-label fw-semibold small text-muted text-uppercase">Supplier Name</label>
                        <input asp-for="Name" class="form-control form-control-lg border-2" placeholder="e.g. Global Fleet Solutions" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="AverageRating" class="form-label fw-semibold small text-muted text-uppercase">Initial Rating (0-5)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-2 border-end-0 text-warning"><i class="fas fa-star"></i></span>
                            <input asp-for="AverageRating" class="form-control form-control-lg border-2 border-start-0" placeholder="5.0" />
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4 pb-2 border-bottom">
                    <div class="bg-info-subtle text-info p-2 rounded-3 me-3">
                        <i class="fas fa-address-book fa-fw"></i>
                    </div>
                    <h5 class="mb-0 fw-bold">Primary Contact</h5>
                </div>

                <div class="row g-3 mb-5">
                    <div class="col-md-6">
                        <label asp-for="ContactPerson" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="ContactPerson" class="form-control border-2" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactPhone" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="ContactPhone" class="form-control border-2" />
                    </div>
                    <div class="col-md-12">
                        <label asp-for="ContactEmail" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="ContactEmail" class="form-control border-2" />
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4 pb-2 border-bottom">
                    <div class="bg-success-subtle text-success p-2 rounded-3 me-3">
                        <i class="fas fa-map-marked-alt fa-fw"></i>
                    </div>
                    <h5 class="mb-0 fw-bold">Location & Logistics</h5>
                </div>

                <div class="row g-3 mb-5">
                    <div class="col-12">
                        <label asp-for="Address" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="Address" class="form-control border-2" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="City" class="form-control border-2" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label fw-semibold small text-muted text-uppercase"></label>
                        <input asp-for="Country" class="form-control border-2" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-light px-4 fw-bold text-muted">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                        <i class="fas fa-save me-2"></i> @(ViewContext.RouteData.Values["action"]?.ToString() == "Edit" ? "Update Partner" : "Register Supplier")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>